        =link_to "#", class: "category-link" do
          カテゴリー
      %li.list-left__brand
        =link_to "#", class: "brand-link" do
          ブランド
    %ul.list-right
      - if user_signed_in?
        .user_nav.grid-6
          = link_to "ログアウト", destroy_user_session_path, method: :delete
          = link_to "投稿する", new_tweet_path, class: ""
      - else
        %li.list-raight__sign-in
          = link_to "ログイン", new_user_session_path, class: "list-right__sign-in-link"
        %li.list-right__new-registration
          = link_to "新規会員登録", new_user_registration_path, class: "list-right__new-registration-link"


