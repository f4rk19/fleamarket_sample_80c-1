.index-header
  = render "Purchase-header"

.create
  .create__frame
    .create__frame__message
      登録が完了しました。
    %ul.create__frame__btns
      -# マイページに戻るパスを指定
      %li.my_page_link
        = link_to "マイページに戻る", products_path, class: "my_page_link__btn"
      -# のちに実装する、登録クレジットカード詳細表示(showアクション)に行くパスを指定
      %li.credit_cards_index_link
        = link_to "登録カード一覧", card_index_path(current_user.id), class: "credit_cards_index_link__btn"

.index-footer
  = render "Purchase-footer"