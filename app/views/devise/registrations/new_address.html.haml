.Account
  %section.Account__container
    %h2.Account__title 住所情報登録
    = form_for @address do |f|
      = render "devise/shared/error_messages", resource: @address
      .Account__content
        .Form__group
          %div
            = f.label "お名前(全角)"
            %span.Form__require 必須
          .Form__half-area
            = f.text_field :family_name, placeholder: "例) 田中", type: "text", value: "", class:"Form__input half"
            = f.text_field :first_name, placeholder: "例) 太郎", type: "text", value: "", class:"Form__input half"
        .Form__group
          %div
            = f.label "お名前カナ(全角)"
            %span.Form__require 必須
          .Form__half-area
            = f.text_field :family_name_kana, placeholder: "例) タナカ", type: "text", value: "", class:"Form__input half"
            = f.text_field :first_name_kana, placeholder: "例) タロウ", type: "text", value: "", class:"Form__input half"
        .Form__group
          = f.label :post_code, "郵便番号"
          %span.Form__require 必須
          = f.text_field :post_code, placeholder: "例)123-4567", value: "", class:"Form__input",id:"user_address_attributes_postal_code"
        .Form__group
          = f.label :prefecture, "都道府県"
          %span.Form__require 必須
          = f.select :prefecture, Address.prefectures.keys, {}, {class: 'Form__select'}
        .Form__group
          = f.label :city, "市区町村"
          %span.Form__require 必須
          = f.text_field :city, placeholder: "例)横浜市緑区", class:"Form__input"
        .Form__group
          = f.label :address, "番地"
          %span.Form__require 必須
          = f.text_field :address, placeholder: "例)青山1-1-1", class:"Form__input"
        .Form__group
          = f.label :building, "建物名"
          %span.Form__not-required 任意
          = f.text_field :building, placeholder: "例)柳ビル103", class:"Form__input"
        .Form__group
          = f.label :telephone_number, "電話番号"
          %span.Form__not-required 任意
          = f.text_field :telephone_number, placeholder: "09012345678", class:"Form__input"
        .actions
          = f.submit "Create Account", class: 'Button UserButton', value:  '新規登録をする'