.Header
  .Header__inner
    =link_to root_path ,class:"LogoFurima__link" do
      =image_tag "logo.png",class:"LogoFurima__image"

.Account
  %section.Account__container
    %h2.Account__title ログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .Account__content
        .Form__group
          = render "devise/shared/links"
      .Account__content
        .Form__group
          = f.label :email, "メールアドレス"
          = f.email_field :email, autofocus: true, class:"Form__input"
        .Form__group.Form_password
          = f.label :password, "パスワード"
          = f.password_field :password, autocomplete: "off", class: "Form__input", placeholder:"6文字以上の半角英数字"
        .Form__group
          = link_to "#",class:"Form__info" do
            パスワードお忘れの方
        .actions
          = f.submit "Log in", class: "Button UserButton", value: "ログインをする"

.footer
  = render 'products/footer'
